{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",  // This is the key change to fix the error
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,  // This will now work
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true
  },
  "include": ["src/**/*", "tailwind.config.ts"]
}

